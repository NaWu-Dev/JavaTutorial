<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.test.servletdemo.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.test.servletdemo.StudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestParamServlet</servlet-name>
        <servlet-class>com.test.servletdemo.TestParamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MvcDemoServlet</servlet-name>
        <servlet-class>com.test.servletdemo.MvcDemoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/HelloWorldServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/StudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestParamServlet</servlet-name>
        <url-pattern>/TestParamServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MvcDemoServlet</servlet-name>
        <url-pattern>/MvcDemoServlet</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>max-shopping-cart-size</param-name>
        <param-value>99</param-value>
    </context-param>
    <context-param>
        <param-name>project-team-name</param-name>
        <param-value>The Coding Gurus</param-value>
    </context-param>
</web-app>